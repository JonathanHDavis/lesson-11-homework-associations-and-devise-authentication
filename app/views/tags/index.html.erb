<h1>Tags</h1>

<ul class="nav navbar-nav">
  <li><%=link_to "LOGIN", user_session_path %></li>
  <li><%= link_to('SIGN UP', new_user_registration_path)  %></li>
  <li><%=link_to('LOGOUT', destroy_user_session_path, :method => :delete) %></li>
</ul>

<%= link_to "Home", root_path %>
<% if current_user %>
  <%= link_to "Create New Tag", new_tag_path %>
<% end %>

<br />
<br />
<table>
  <tr>
    <th>Tag Name</th>
    <th></th>
    <th></th>
  </tr>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= link_to(tag.name, tag_path(tag)) %></td>
        <% if current_user %>
          <td><%= link_to "edit", edit_tag_path(tag) %></td>
          <td><%= link_to "delete", tag_path(tag), method: :delete, data: {confirm: "Are you sure you want to delete this tag?"}%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>